<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".AboutUsActivity">

    <RelativeLayout
        android:id="@+id/logoaboutus"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_rumah_sakit"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/judulaboutus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoaboutus"
        android:layout_centerInParent="true"
        android:text="ABOUT US"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000" />
    <TextView
        android:id="@+id/deskripsiaboutus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/judulaboutus"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="0dp"
        android:text="Rumah Sakit Adi Jaya merupakan rumah sakit yang terletak di Kabupaten Buleleng, Bali. Rumah Sakit Adi Jaya didirikan pada tahun 2010 dan berlokasi di Jalan Ngurah Rai, Kecamatan Buleleng. Rumah sakit ini memiliki beberapa Poliklinik dan merupakan salah satu rumah sakit besar di Kabupaten Buleleng."
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="#000" />
    <TextView
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/deskripsiaboutus"
        android:text="https://www.rsadijaya.co.id"
        android:textSize="15dp"
        android:textColor="#000"
        android:drawableLeft="@drawable/ic_web"
        android:drawablePadding="10dp"/>
    <TextView
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_marginLeft="13dp"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:layout_below="@id/website"
        android:text="Jalan Ngurah Rai No. 30, Kecamatan Buleleng, Buleleng, Bali"
        android:textSize="15dp"
        android:textColor="#000"
        android:drawableLeft="@drawable/ic_place"
        android:drawablePadding="0dp"/>



</RelativeLayout>