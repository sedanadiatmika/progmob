<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".ContactUsActivity">

    <RelativeLayout
        android:id="@+id/logocontactus"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_rumah_sakit"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/judulcontactus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logocontactus"
        android:layout_centerInParent="true"
        android:text="CONTACT US"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000" />

    <TextView
        android:id="@+id/contactussaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/judulcontactus"
        android:layout_marginTop="15dp"
        android:text="KRITIK, SARAN, DAN APRESIASI DAPAT MENGHUBUNGI :"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/instagram"
        android:layout_below="@id/contactussaran"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="160dp"
        android:src="@drawable/instagram"/>
    <ImageView
        android:id="@+id/fb"
        android:layout_below="@id/contactussaran"
        android:layout_toRightOf="@id/instagram"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/fb"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instagram"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:text="rumahsakitadijaya11@gmail.com"
        android:textSize="15dp"
        android:textColor="#000"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"/>
    <TextView
        android:id="@+id/tlp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:text="0361-223761"
        android:textSize="15dp"
        android:textColor="#000"
        android:drawableLeft="@drawable/ic_call"
        android:drawablePadding="10dp"/>






</RelativeLayout>