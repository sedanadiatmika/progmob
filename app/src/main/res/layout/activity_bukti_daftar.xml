<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuktiDaftarActivity"
    android:orientation="vertical"
    android:background="#fff">

    <ImageView
        android:id="@+id/gambarlogobukti"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/ic_rumah_sakit"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/judul_bukti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambarlogobukti"
        android:text="BUKTI PENDAFTARAN POLI RUMAH SAKIT ADI JAYA"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_centerInParent="true"/>


    <ImageView
        android:id="@+id/qrcode"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@color/colorTextBlack" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/noantre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nomor Antrian"
            android:enabled="false"
            android:inputType="number"
            android:textColor="#000"
            android:layout_marginTop="15dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <EditText
            android:id="@+id/namapasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nama Pasien"
            android:enabled="false"
            android:inputType="textPersonName"
            android:textColor="@color/colorTextBlack"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/tgllahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tanggal Lahir Pasien"
            android:enabled="false"
            android:inputType="date"
            android:textColor="#000" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/politujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:hint="Poli Tujuan"
            android:inputType="date"
            android:textColor="#000"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tglperiksa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tanggal Periksa"
            android:enabled="false"
            android:inputType="date"
            android:textColor="#000"/>
    </com.google.android.material.textfield.TextInputLayout>





</LinearLayout>



